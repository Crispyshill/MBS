{
  "compilerOptions": {
    "target": "ES2020",                 // Target modern JS
    "module": "commonjs",              // Use CommonJS for compatibility with Node.js
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Enable compatibility with CommonJS modules
    "skipLibCheck": true,              // Skip type checking for declaration files
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // Root directory of source files
  },
  "include": ["src"],                  // Include source files
  "exclude": ["node_modules"]          // Exclude unnecessary directories
}
